{
  // Required
  "manifest_version": 2,
  "name": "YouTube Window Player",
  "version": "0.1.0",

  // Recommended
  "description": "Resize YouTube's HTML5 player to fully fit your browser window",
  // "icons": {...},

  // Pick one (or none)
  // "page_action": {...},

  // Optional
  "author": "Jack Hayhurst",
  "content_scripts": [{
    "css": [
      "player.css"
    ],
    "js": [
      "thirdParty/jquery-3.2.1.min.js",
      "thirdParty/debounce.js",
      "player.js"
    ],
    "matches": ["https://*.youtube.com/*"]
  }],
  "incognito": "split"
}